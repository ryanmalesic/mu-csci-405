<!DOCTYPE html>
<html>

<head>
  <title><%= blog.title %></title>
  <link rel="stylesheet" href="/stylesheets/bulma/bulma.css" />
</head>

<body>
  <% include ../partials/navbar %>
  <div class="section">
    <div class="container">
      <h1 class="title is-1"><%= blog.title %></h1>
      <h3 class="subtitle is-3"><%= blog.author.name %></h1>
    </div>
  </div>

  <div class="section">
    <div class="container">
      <div class="content">
        <p>
          <%= blog.content %>...
          <br />
          <% blog.tags.forEach(function(tag) { %>
          <a href="#">#<%= tag %></a>
          <% }); %>
        </p>

        <p>
          <b>Created</b>
          <time><%= blog.createdOn %></time>

          <% if (blog.createdOn !== blog.lastEditedOn) { %>
          <br />
          <b>Edited</b>
          <time><%= blog.lastEditedOn %></time>
          <% } %>
        </p>
      </div>
    </div>
  </div>
</body>

</html>
